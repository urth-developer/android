<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Mypage.SuggestActivity"
        android:orientation="vertical"
>
    <include
            android:id="@+id/toolbar_suggest"
            layout="@layout/toolbar_suggest"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="35dp"
            android:gravity="left"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
    >

        <TextView
                android:layout_marginTop="28dp"
                android:text="건의하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#48898c"
                android:layout_marginBottom="10dp"
        />



        <View
                android:layout_marginBottom="20dp"
                android:background="#15696c"
                android:layout_width="12dp"
                android:layout_height="2dp"

        />

        <EditText
                android:layout_width="280dp"
                android:layout_height="343dp"
                android:layout_gravity="center"
                android:background="@drawable/suggest_border"
        />

        <ImageButton
                android:layout_marginTop="54dp"
                android:id="@+id/btn_suggest"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_width="118dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_suggest" />



    </LinearLayout>
</LinearLayout>