<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChallengeCreate.ActivityCreateTitle">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView
                    android:background="@drawable/img_bg_makechal_4"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginRight="-15dp"
                    android:layout_marginTop="-15dp"
                    android:layout_width="match_parent"
                    android:layout_height="309dp"/>
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"
                    app:srcCompat="@drawable/ic_backarrow" android:id="@+id/btn_back_create_photo"/>
            <ImageView
                    android:src="@drawable/btn_cancel"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" android:id="@+id/btn_cancel_create_photo"/>
            <ImageView
                    android:layout_marginLeft="265dp"
                    android:layout_marginTop="605dp"
                    android:layout_width="88dp"
                    android:layout_height="48dp"
                    android:src="@drawable/btn_next"
                    android:id="@+id/btn_next_create_photo"/>
            <ImageView
                    android:layout_marginTop="309dp"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/img_pick"
                    android:scaleType="centerCrop"
                    android:layout_width="320dp"
                    android:layout_height="320dp"/>
            <ImageView
                    android:layout_marginTop="650dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="320dp"
                    android:layout_height="20dp"
                    android:id="@+id/img_pick_btn"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>