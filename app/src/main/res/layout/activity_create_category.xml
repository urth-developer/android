<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChallengeCreate.ActivityCreateCategory">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView
                    android:background="@drawable/img_bg_makechal_2"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginRight="-15dp"
                    android:layout_marginTop="-15dp"
                    android:layout_width="match_parent"
                    android:layout_height="309dp"/>
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"
                    app:srcCompat="@drawable/ic_backarrow" android:id="@+id/btn_back_cteate_category"/>
            <ImageView
                    android:src="@drawable/btn_cancel"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" android:id="@+id/btn_cancel_cteate_category"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="295dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="34dp"
                        android:layout_height="81dp">
                    <ImageView
                            android:src="@drawable/create_category_disposable_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/img_category1"
                            android:layout_weight="1"/>
                    <ImageView
                            android:src="@drawable/create_category_air_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/img_category2"
                            android:layout_weight="1"/>
                    <ImageView
                            android:src="@drawable/create_category_tree_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/img_category3"
                            android:layout_weight="1"/>
                    <ImageView
                            android:src="@drawable/create_category_water_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/img_category4"
                            android:layout_weight="1"/>
                    <ImageView
                            android:src="@drawable/create_category_ecology_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/img_category5"
                            android:layout_weight="1"/>
                </LinearLayout>
                <TextView
                        android:textSize="16sp"
                        android:textColor="#15696c"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:id="@+id/txt_categorytitle"/>
                <ImageView
                        android:src="@drawable/img_differaentiate_green"
                        android:layout_marginVertical="10dp"
                        android:layout_width="13dp"
                        android:lineSpacingExtra="12sp"
                        android:layout_height="2dp"/>
                <TextView
                        android:textSize="14sp"
                        android:textColor="#53565b"
                        android:layout_marginLeft="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="9dp"

                        android:id="@+id/txt_categorycontent"/>

            </LinearLayout>
            <ImageView
                    android:layout_marginLeft="265dp"
                    android:layout_marginTop="615dp"
                    android:layout_width="88dp"
                    android:layout_height="48dp"
                    android:src="@drawable/btn_next"
                    android:id="@+id/btn_next_cteate_category"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>