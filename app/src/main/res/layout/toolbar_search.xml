<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView
                android:src="@drawable/ic_backarrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="14dp"
                android:id="@+id/btn_back_search"/>
        <EditText
                android:layout_marginTop="12dp"
                android:layout_marginLeft="60dp"
                android:textSize="18sp"
                android:hint="검색어를 입력하세요"
                android:textColor="#b0b0b0b0"
                android:textColorHint="#b0b0b0"
                android:background="@null"
                android:id="@+id/edit_txt_search"
                android:layout_width="200dp" android:layout_height="wrap_content"/>
        <ImageView
                android:src="@drawable/ic_search"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="14dp"
                android:layout_width="24dp"
                android:layout_height="24dp" android:id="@+id/btn_search"/>

    </RelativeLayout>
    <ImageView
            android:layout_marginTop="48dp" android:layout_width="match_parent" android:layout_height="4dp" android:background="@drawable/border_search_toolbar"/>

</RelativeLayout>