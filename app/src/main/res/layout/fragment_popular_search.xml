<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:context=".Fragment.PopularSearchFragment"
android:id="@+id/popular_search">
    <ImageView
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="-15dp"
            android:layout_marginRight="-15dp"
            android:background="@drawable/bg_search"
            android:layout_width="match_parent"
            android:layout_height="291dp"/>
    <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="카테고리 별 보기"
                android:textSize="16sp"
                android:textColor="#15696c"
                android:layout_marginTop="30dp"/>
        <ImageView
                android:src="@drawable/img_differaentiate_green"
                android:layout_marginTop="10dp"
                android:layout_width="14dp"
                android:layout_height="2dp" android:id="@+id/image"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/txt_recomend_search1"
                    android:background="@drawable/border_round1"
                    android:text="미세먼지"
                    android:textSize="12sp"
                    android:textColor="#53565b"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txt_recomend_search2"
                    android:background="@drawable/border_round2"
                    android:text="제로 웨이스트"
                    android:textSize="12sp"
                    android:textColor="#53565b"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txt_recomend_search3"
                    android:background="@drawable/border_round2"
                    android:text="온실가스"
                    android:textSize="12sp"
                    android:textColor="#53565b"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/txt_recomend_search4"
                    android:background="@drawable/border_round4"
                    android:text="유기농제품"
                    android:textSize="12sp"
                    android:textColor="#53565b"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txt_recomend_search5"
                    android:background="@drawable/border_round4"
                    android:text="반려식물"
                    android:textSize="12sp"
                    android:textColor="#53565b"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txt_recomend_search6"
                    android:background="@drawable/border_round1"
                    android:text="채식하기"
                    android:textSize="12sp"
                    android:textColor="#53565b"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/txt_recomend_search7"
                    android:background="@drawable/border_round2"
                    android:text="건강을 위한"
                    android:textSize="12sp"
                    android:textColor="#53565b"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txt_recomend_search8"
                    android:background="@drawable/border_round3"
                    android:text="저탄소"
                    android:textSize="12sp"
                    android:textColor="#53565b"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="7dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>