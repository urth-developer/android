<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".custom_camera.CameraCheckActivity">


        <ImageButton
                android:id="@+id/backback"
                android:contentDescription="@string/description_info"
                style="@android:style/Widget.Material.Light.Button.Borderless"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_gravity="left"
                android:src="@drawable/ic_backarrow" />

    <TextView
            android:id="@+id/txt_toolbar_product_title"
            android:text="인증하기"
            android:paddingLeft="50dp"
            android:paddingTop="15dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textColor="#484848"
            android:textStyle="bold"/>


    <com.example.urthlesh.CustomView.RectangleImageView
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="62dp" />
    <LinearLayout
            android:id="@+id/control"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff"
            android:orientation="vertical"
            android:gravity="center_vertical">

        <ImageButton
                android:id="@+id/btn_picture_certificate"
                android:contentDescription="@string/description_info"
                style="@android:style/Widget.Material.Light.Button.Borderless"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/btn_success" />
        <ImageButton
                android:id="@+id/btn_picture_cancel"
                android:contentDescription="@string/description_info"
                style="@android:style/Widget.Material.Light.Button.Borderless"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/btn_fail" />


    </LinearLayout>
</RelativeLayout>
