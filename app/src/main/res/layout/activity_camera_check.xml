<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".custom_camera.CameraCheckActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:gravity="left|center">

        <ImageButton
                android:id="@+id/camera_check_back"
                android:background="@color/transparent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="16dp"
                android:src="@drawable/ic_backarrow"/>

        <TextView
                android:text="인증하기"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#484848"
                android:textStyle="bold"/>


    </LinearLayout>



    <com.example.urthlesh.CustomView.RectangleImageView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="62dp"/>
    <LinearLayout
            android:id="@+id/control"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff"
            android:orientation="vertical"
            android:gravity="center_vertical">

        <ImageButton
                android:id="@+id/btn_picture_certificate"
                android:background="@color/transparent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/btn_success"/>
        <ImageButton
                android:layout_marginTop="10dp"
                android:id="@+id/btn_picture_cancel"
                android:background="@color/transparent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/btn_fail"/>


    </LinearLayout>
</RelativeLayout>
