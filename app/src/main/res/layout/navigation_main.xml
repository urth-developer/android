<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:dividerPadding="1dp"
                                             android:layout_width="match_parent"
                                             android:layout_height="40dp">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:id="@+id/rl_nav_main_home"
                    android:layout_weight="1"
                    android:gravity="center">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="홈"
                  android:textSize="14dp"
                  android:textColor="#484848"
                  android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:id="@+id/rl_nav_main_allurth"
                    android:layout_weight="1"
                    android:gravity="center" android:layout_alignParentTop="true">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:text="챌린지"
                  android:textColor="#484848"
                  android:textSize="14dp"
        />
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/rl_nav_main_usurth">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="탐라"
                  android:textSize="14dp"
                  android:textColor="#484848"
                  android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                    android:id="@+id/rl_nav_main_mypage"
                    android:layout_weight="1"
                    android:gravity="center">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="마이"
                  android:textSize="14dp"
                  android:textColor="#484848"
                  android:textStyle="bold"/>
    </RelativeLayout>

</LinearLayout>