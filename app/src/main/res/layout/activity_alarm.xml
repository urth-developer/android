<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Mypage.AlarmActivity"
        android:orientation="vertical"
>
   <include
       android:id="@+id/toolbar_alarm"
       layout="@layout/toolbar_alarm"/>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="35dp"
            android:gravity="left"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
    >

        <TextView
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:text="정보성 알림"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#48898c"
        />



        <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:background="#15696c"
                android:layout_width="12dp"
                android:layout_height="2dp"

        />


        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
        >

            <TextView
                    android:id="@+id/information_push"
                    android:layout_marginTop="3.5dp"
                    android:text="푸시"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#53565b"


            />
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/switch1"/>





        </FrameLayout>


        <TextView
                android:text="챌린지 개설 신청 진행 상황 등을 안내해 드려요"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#53565b"
                android:layout_marginBottom="20dp"
        />

        <View
                android:layout_marginBottom="20dp"
                android:background="#ebebeb"
                android:layout_width="328dp"
                android:layout_height="1dp"
        />

        <TextView
                android:textStyle="bold"
                android:text="마케팅 알림"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#48898c"

        />



        <View
                android:layout_marginTop="10dp"
                android:background="#15696c"
                android:layout_width="12dp"
                android:layout_height="2dp"

        />
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
        >

            <TextView
                    android:layout_marginTop="3.5dp"
                    android:id="@+id/marketing_push"
                    android:text="푸시"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#53565b"
            />
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/switch2"/>

        </FrameLayout>

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
        >

            <TextView
                    android:id="@+id/marketing_email"
                    android:text="이메일"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#53565b"
                    android:layout_marginTop="3.5dp"
            />
            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:id="@+id/switch3"/>





        </FrameLayout>



    </LinearLayout>

</LinearLayout>
