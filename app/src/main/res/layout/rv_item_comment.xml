<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/img_profile_comment"
                android:src="@drawable/img_profileimage_comment"
                android:layout_marginLeft="11dp"
                android:layout_width="58dp" android:layout_height="60dp"/>
        <TextView
                android:id="@+id/txt_nickname_comment"
                android:text="용이 누나"
                android:layout_marginLeft="72dp"
                android:textColor="#53565b"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_width="wrap_content" android:layout_height="18dp"/>
        <TextView
                android:id="@+id/txt_comment_comment"
                android:text="용이 보고싶다 어스 멋져 어스 멋져 어스 멋져 어스 멋져 어스 멋져"
                android:inputType="textMultiLine"
                android:maxLength="500"
                android:textColor="#53565b"
                android:textSize="13sp"
                android:layout_marginLeft="72dp"
                android:layout_width="268dp" android:layout_height="wrap_content" android:layout_marginTop="20dp"/>
                <TextView
                android:text="삭제"
                android:textSize="10sp"
                android:textColor="#b0b0b0"
                android:layout_marginLeft="322dp"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>