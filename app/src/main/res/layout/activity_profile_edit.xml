<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Mypage.ProfileEditActivity"
        android:orientation="vertical"
>

    <include
            android:id="@+id/toolbar_profile_edit"
            layout="@layout/toolbar_profile_edit"/>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
    >


        <FrameLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"

        >
            <ImageView
                    android:id="@+id/image_view"
                    android:layout_height="100dp"
                    android:layout_width="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/img_profile"
            />

            <ImageView
                    android:id="@+id/img_pick_btn"
                    android:layout_height="44dp"
                    android:layout_width="44dp"
                    android:background="@drawable/btn_editprofilephoto"
                    android:layout_gravity="bottom|right"
            />


        </FrameLayout>

        <LinearLayout
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="35dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
        >

            <TextView
                    android:id="@+id/textSignInID"
                    android:text="이메일 아이디"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#53565b"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="5dp"
            />


            <EditText
                    android:layout_marginTop="12dp"
                    android:id="@+id/edtSignInID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="kys87878@gmail.com"
                    android:textColor="#53565b"
                    android:paddingTop="5dp"
                    android:textSize="14sp"

            />



            <TextView
                    android:layout_marginTop="30dp"
                    android:id="@+id/textSignInNickName"
                    android:text="닉네임"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#53565b"
                    android:textStyle="bold"
                    android:paddingTop="5dp"

            />


            <EditText
                    android:layout_marginTop="12dp"
                    android:id="@+id/edtSignInNickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="밍밍아아1234"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
            />



        </LinearLayout>


    </LinearLayout>

</LinearLayout>