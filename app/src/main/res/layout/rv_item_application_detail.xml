<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:id="@+id/img_rv_application_detail_image"/>
        <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_marginTop="16dp"
                    android:text="챌린지 제목이 들어갈 자리입니다. 길어지면 여기까지는"
                    android:textColor="#53565b"
                    android:textSize="14sp"
                    android:layout_width="194dp"
                    android:layout_height="40dp"
                    android:id="@+id/txt_rv_application_detail_title"/>
            <ImageView
                    android:src="@drawable/img_differaentiate_green"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="22dp"
                    android:layout_width="14dp"
                    android:layout_height="2dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp">
                <TextView
                        android:text="개설신청일:2019.07.08"
                        android:textSize="10sp"
                        android:textColor="#b0b0b0"
                        android:layout_marginTop="3dp"
                        android:layout_width="101dp"
                        android:layout_height="15dp"
                        android:id="@+id/txt_rv_application_detail_date"/>

                <ImageButton
                        android:id="@+id/rv_application_detail_chalstatus_wait"
                        android:contentDescription="@string/description_info"
                        style="@android:style/Widget.Material.Light.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:src="@drawable/img_chalstatus_wait"
                />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>