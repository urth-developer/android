<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".Activity.LoginActivity">
    <RelativeLayout
            android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_loginsignin"
    ></RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="35dp"
            android:gravity="center"
    android:orientation="vertical"
    >
    <EditText
            android:id="@+id/edtLoginID"

            android:layout_width="match_parent" android:layout_height="wrap_content"
    android:hint="이메일 아이디"
              android:textColor="#b0b0b0"
              
    />
    <EditText
            android:id="@+id/edtLoginPW"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"
    android:hint="비밀번호"
    />
        <ImageButton
                android:id="@+id/btn_startstartstart"
                android:contentDescription="@string/description_info"
                style="@android:style/Widget.Material.Light.Button.Borderless"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/btn_signin"
                android:paddingTop="35dp"
                android:layout_marginBottom="5dp"
        />
    <TextView
            android:id="@+id/txtLoginBack"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="그냥 둘러볼래요"

    />
    <TextView
            android:id="@+id/txtLoginSignup"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="회원가입"
    />
    </LinearLayout>

</LinearLayout>