<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        tools:context=".Activity.LoginActivity">
    <RelativeLayout
            android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_loginsignin"
    ></RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="35dp"
            android:gravity="center"
    android:orientation="vertical"
    >
    <EditText
            android:id="@+id/edtLoginID"
            android:inputType="text"

            android:layout_width="match_parent" android:layout_height="wrap_content"
    android:hint="이메일 아이디"
              android:textColor="#b0b0b0"
              
    />
    <EditText
            android:id="@+id/edtLoginPW"
            android:layout_marginBottom="20dp"
            android:inputType="text"
            android:layout_width="match_parent" android:layout_height="wrap_content"
    android:hint="비밀번호"
    />
    <Button
            android:id="@+id/btnLoginSubmit"
            android:layout_width="170dp" android:layout_height="wrap_content"
    android:text="로그인"
            android:background="@drawable/active_border"
            android:textColor="#ffffff"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp"
    />
    <TextView
            android:id="@+id/txtLoginBack"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="그냥 둘러볼래요"

    />
    <TextView
            android:id="@+id/txtLoginSignup"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="회원가입"
    />
    </LinearLayout>

</LinearLayout>